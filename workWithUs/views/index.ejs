<div class="row flex-lg-row-reverse aling-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img
      src="/img/home.jpg"
      width="607"
      height="510"
      class="d-block mx-lg-auto img-fluid"
      Loading="lazy"
      alt="WorkWithUs"
    />
  </div>

  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">Start your first work by clicking...</h1>
    <p class="lead">
      Expore our huge categories of workers plumber......nd all
    </p>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a
        href="/explore-latest"
        class="btn btn-primary btn-dark btn-lg px-4 me-md-2"
        >Explore Latest</a
      >
      <a
        href="/explore-random"
        class="btn btn-outline-secondary btn-lg px-4 me-md-2"
        >Show Random</a
      >
    </div>
  </div>
</div>

<!-- category start -->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(categories != '') { %> <% categories.forEach(function(category, index) {
  %>
  <a
    href="/categries/<%- category.name %>"
    class="col text-center category__link"
  >
    <div class="category__img shadow">
      <img
        src="img/<%- category.image %>"
        alt="<%- category.name %>"
        Loading="lazy"
      />
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>
  <% }) %> <% } %>

  <a href="/categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="img/view-all.avif" alt="view all" Loading="lazy" />
    </div>
    <div class="pt-1">View all</div>
  </a>
</div>

<!-- category end -->

<!-- latest start -->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Work</h2>
    <a href="/explore-latest" class="ms-auto">View More</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g2 g-lg-3">
    <% if(contract !='') { %> <% contract.latest.forEach(function(job, index) {
    %>
    <a href="/job/<%= job._id %>" class="col text-center category__link">
      <div class="category__img category__img--arge shadow">
        <img
          src="/uploads/<%= job.image %>"
          alt="<%= job.name %>"
          Loading="lazy"
        />
      </div>
      <div class="pt-1"><%= job.name %></div>
    </a>
    <% }) %> <% } %>
  </div>
</section>

<!-- latest end -->

