<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g2 g-lg-3">
  <% if( job !== '' ) { %> <% job.forEach(function(job, index) { %>
  <a href="/job/<%= job._id %>" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img
        src="/uploads/<%= job.image %>"
        alt="<%= job.name %>"
        Loading="lazy"
      />
    </div>
    <div class="pt-1"><%= job.name %></div>
  </a>
  <% }) %> <% } else { %>
  <p>No items found</p>
  <% } %>
</div>
